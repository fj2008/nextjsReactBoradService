{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@components/*": [
        "src/presentation/components/*"
      ],
      "@features/*": [
        "src/presentation/features/*"
      ],
      "@layouts/*": [
        "src/presentation/layouts/*"
      ],
      "@styles/*": [
        "src/presentation/styles/*"
      ],
      "@application/*": [
        "src/application/*"
      ],
      "@hooks/*": [
        "src/application/hooks/*"
      ],
      "@store/*": [
        "src/application/store/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@providers/*": [
        "src/providers/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
